{% extends "base.html.twig" %}

{% block title %}
	Bienvenue sur SnowTricks.Com
{% endblock %}

{% block body %}
	<!-- ======= Hero Section ======= -->
	<section id="hero" class="d-flex align-items-center">

		<div class="container">
			<div class="row">
				<div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center text-center">
					<h1 data-aos="fade-up">SnowTricks.Com</h1>
					<h2 data-aos="fade-up" data-aos-delay="400">Upgrade Your Style</h2>
					<div data-aos="fade-up" data-aos-delay="800">
						<a href="#" class="btn-get-started scrollto">Je me connecte ...</a>
					</div>
				</div>
				<div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="fade-left" data-aos-delay="200">
					<img src="assets/img/snowtricks-hero-img.jpg" class="img-fluid" alt="">
				</div>
			</div>
		</div>

	</section>
	<!-- End Hero -->

	<!-- ======= Category Section ======= -->
	<section id="category" class="features">
		<div class="container">
			<div class="section-title" data-aos="fade-up">
				<h2>Catégories</h2>
				<p>Vous pouvez aussi faire une recherche par catégorie de tricks</p>
			</div>

			<div class="row" data-aos="fade-up" data-aos-delay="300">
				{% for category in categoryRepository.findAll() %}
					<div class="col-6 col-lg-3 col-md-4 mt-3">
						<div class="icon-box">
							<h3>
								<a href="{{ path('trick_category', {'slug': category.slug}) }}">{{ category.name }}</a>
							</h3>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
	<!-- End Category Section -->

	<!-- ======= Last created tricks Section ======= -->
	<section id="last-tricks" class="more-services">
		<div class="container">

			<div class="row">

				{% for trick in tricks %}
					<div class="col-lg-6 d-flex align-items-stretch mt-4">
						<div class="card" style='background-image: url("assets/img/pictures/picture_1.jpg");' data-aos="fade-up" data-aos-delay="100">
							<div class="card-body">
								<h5 class="card-title">
									<a href="{{ path('trick_show', { 'category_slug': trick.category.slug,'slug': trick.slug }) }}">{{ trick.name }}</a>
								</h5>
								<p class="card-text">{{ trick.description[:100] ~ (trick.description|length > 100 ? '...') }}</p>
								<div class="read-more">
									<a href="{{ path('trick_show', { 'category_slug': trick.category.slug,'slug': trick.slug }) }}">
										<i class="bi bi-arrow-right"></i>
										Voir ce trick</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>

		</div>
	</section>
	<!-- End More Services Section -->


{% endblock %}
