{% extends "base.html.twig" %}

{% block title %}
	Bienvenue !
{% endblock %}

{% block body %}

	<!-- ======= Hero Section ======= -->
	<section id="hero" class="d-flex align-items-center">
		<div class="container">

			<div class="row">
				{% include "shared/_flashes.html.twig" %}
			</div>

			<div class="row">
				<div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center text-center">
					<h1 data-aos="fade-up">SnowTricks.Com</h1>
					<h2 data-aos="fade-up" data-aos-delay="400">Upgrade Your Style</h2>
					<div data-aos="fade-up" data-aos-delay="800">
						{% if app.user %}
							<h3>Bienvenue
								{{ app.user.screenName|capitalize }}
								!</h3>
						{% else %}
							<a href="{{ path('security_login') }}" class="btn-get-started scrollto">Je me connecte ...</a>
						{% endif %}
					</div>
				</div>
				<div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="fade-left" data-aos-delay="200">
					<img src="assets/img/snowtricks-hero-img.jpg" class="img-fluid" alt="">
				</div>
			</div>
		</div>

	</section>
	<!-- End Hero -->

	<!-- ======= Last created tricks Section ======= -->
	<section id="last-tricks" class="more-services">
		<div class="container">
			<div class="section-title" data-aos="fade-up">
				<h2>Tous les tricks</h2>
			</div>

			<div class="row">

				{% for trick in tricks|reverse %}
					{% include "shared/_trickCard.html.twig" %}
				{% endfor %}

			</div>

		</div>
	</section>
	<!-- End last created Section -->

{% endblock %}
