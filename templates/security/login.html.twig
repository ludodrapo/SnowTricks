{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<section id="login">
		<div class="container mt-5">

			<form method="post">

				{% if app.user %}
					<div class="mb-3">
						Vous êtes déjà connecté(e),
						{{ app.user.screenName }}.<br/>
						Peut-être souhaitez-vous vous
						<a href="{{ path('security_logout') }}">déconnecter
						</a>
						?
					</div>

				{% else %}

					<h1 class="h3 mb-3 font-weight-normal">Pour vous connecter ...</h1>
					{% if error %}
						<div
							class="alert alert-danger">
							{# {{ error.message|trans(error.messageData, 'security') }} #}
							{{ error.message|trans(error.messageData, 'security') }}
						</div>
					{% endif %}
					<div class="mb-3">
						<label for="inputEmail">Email</label>
						<input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					</div>
					<div class="mb-3">
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{# See https://symfony.com/doc/current/security/remember_me.html #}
					{# <div class="checkbox mb-3">
																										<label>
																											<input type="checkbox" name="_remember_me"> Remember me
																										</label>
																									</div> #}

						<button class="btn form-submit-btn" type="submit"> C'est parti !
					</button>
				{% endif %}
			</form>
		</div>
	</section>
{% endblock %}
