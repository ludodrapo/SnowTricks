{% extends "base.html.twig" %}

{% block title %}
	Snowtricks -
	{{ trick.name }}
{% endblock %}

{% block body %}
	<!-- ======= Breadcrumbs ======= -->
	<section id="breadcrumbs" class="breadcrumbs">
		<div class="container">

			<div class="d-flex justify-content-between align-items-center">
				<ol>
					<li>
						<a href="{{ path('home') }}">Home</a>
					</li>
					<li>
                        <a href="{{ path('trick_category', {'slug': trick.category.slug}) }}">
                            {{ trick.category.name }}
                        </a>
                    </li>
					<li>{{ trick.name }}</li>
				</ol>
			</div>

		</div>
	</section>
	<!-- End Breadcrumbs -->

	<!-- ======= Portfolio Details Section ======= -->
	<section id="portfolio-details" class="portfolio-details">
		<div class="container">

			<div class="row gy-4">

				<div class="col-lg-7">
					<div class="portfolio-details-slider swiper-container">
						<div class="swiper-wrapper align-items-center">

							{% for pic in trick.pictures %}

								<div class="swiper-slide">
									<img src="{{ pic.url }}" alt="picture of the snowboard trick called '{{ trick.name }}'">
								</div>

							{% endfor %}

						</div>
						<div class="swiper-pagination"></div>
					</div>
				</div>

				<div class="col-lg-5">
					<div class="portfolio-info">
						<h3>{{ trick.name }}</h3>
						<ul>
							<li>
								<strong>Catégorie
								</strong>:
								{{ trick.category.name }}</li>
							<li>
								<strong>Auteur
								</strong>: user.name</li>
							<li>
								<strong>Date de création
								</strong>:
								{{ trick.creationDate|date("d/m/Y") }}</li>
							<li>
								<a class="getstarted scrollto" href="{{ path('trick_edit', { 'id': trick.id }) }}">
									<i class="fas fa-pen"></i>
									Modifier ce trick
								</a>
							</li>
						</ul>
					</div>
					<div class="portfolio-description">
						<h2>Exécution du trick</h2>
						<p>
							{{ trick.description }}
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- End Portfolio Details Section -->

{% endblock %}
