{% extends "base.html.twig" %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<!-- ======= Breadcrumbs ======= -->
	<section id="breadcrumbs" class="breadcrumbs">
		<div class="container">

			<div class="d-flex justify-content-between align-items-center">
				<ol>
					<li><a href="{{ path('home') }}">Home</a></li>
					<li>{{ category.name }}</li>
				</ol>
			</div>

		</div>
	</section>
	<!-- End Breadcrumbs -->

	{% include "shared/_flashes.html.twig" %}

	<section id="last-tricks" class="more-services">
		<div class="container">

			<div class="row">

				{% for trick in category.tricks %}
					{% include "trick/_trickCard.html.twig" %}
				{% endfor %}

			</div>

		</div>
	</section>

{% endblock %}
