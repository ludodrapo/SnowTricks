<div class="row">
	<div class="col-md-6">
		{{ form_row(formView.name) }}
		{{ form_row(formView.category)}}
	</div>
	<div class="col-md-6">
		{{ form_row(formView.description) }}
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<h4>Images</h4>
		<button type="button" class="btn btn-info btn-new" data-collection="#pictures">
			<i class="fas fa-images"></i>
			Ajouter une image
		</button>
		<div id="pictures" data-prototype="{{ include("trick/_addPictureForm.html.twig", {formView: formView.pictures.vars.prototype})|e('html_attr') }}" data-index="{{ formView.pictures|length > 0 ? formView.pictures|last.vars.name + 1 : 0}}">

			{% for picture in formView.pictures %}
				{{ include("trick/_addPictureForm.html.twig", {formView: picture}) }}
			{% endfor %}
		</div>

		{{ form_errors(formView.pictures) }}
	</div>
	<div class="col-md-6">
		<h4>Vidéos</h4>
		<button type="button" class="btn btn-info btn-new" data-collection="#videos">
			<i class="fas fa-film"></i>
			Ajouter une vidéo
		</button>
		<div id="videos" data-prototype="{{ include("trick/_addVideoForm.html.twig", {formView: formView.videos.vars.prototype})|e('html_attr') }}" data-index="{{ formView.videos|length > 0 ? formView.videos|last.vars.name + 1 : 0}}">

			{% for video in formView.videos %}
				{{ include("trick/_addVideoForm.html.twig", {formView: video}) }}
			{% endfor %}
		</div>
		{{ form_errors(formView.videos) }}
	</div>
</div>
