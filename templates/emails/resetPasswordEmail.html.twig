{% apply inline_css(source('@styles/style.css')) %}
<section id="header">
	<div class="logo">
		<h1>
			<a href="{{ path('home') }}"><img src="{{ email.image('@images/snowtricks-logo.png') }}" alt="logo snowtricks.com" class="img-fluid"></a>
		</h1>
	</div>
</section>
<section>
	<div class="container">
		<h2 class="section-title">Réinitialisation de votre mot de passe</h2>
		<h3>Votre mot de passe a été réinitialisé,
			{{ user.screenName|capitalize }}
			!</h3>
		<p>Mot de passe temporaire : {{ temp_password }}</p>
		<p>Pour modifier ce mot de passe temporaire, connectez-vous en
			<a href="{{ path('security_login') }}">cliquant ici</a> puis cliquez sur "Mon profil" dans le menu.
		</p>
		<p>A très vite sur
			<a href="{{ path('home') }}">SnowTricks.Com</a>
			!</p>
	</div>
</section>
{% endapply %}
